<div class="form_container">
    <h2 class="titles">Tu registro de calorias</h2>  
    <table class="table is-striped">
    <thead>
            <tr>
                <th>Actividad Realizada</th>
                <th>Calorías</th>
                <th>Descripción</th>
                <th>Fecha</th>
            </tr>
    </thead>
    <tbody>
            <% @calories_registers.each do |calories_register| %>
                <tr>
                    <td><%= calories_register.description %></td>
                    <td><%= calories_register.calories %></td>
                    <td><%= calories_register.calories_action %></td>
                    <td><%= calories_register.date %></td>

                    <td>
                        <%= link_to calories_register, placeholder:"x", method: :delete, data: {confirm: 'Estas seguro de borrar estos datos?'}, class:"button is-danger" do %>
                            <span>Eliminar</span>
                            <span class="icon is-small">
                                <i class="fas fa-times"></i>
                            </span>
                        <% end %>
                    </td>
                </tr>
            <% end %>
    </tbody>
    </table
    <%= paginate @calories_registers %>
</div>