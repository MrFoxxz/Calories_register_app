
<div class="homepage">
    <div class="hometittle">
        <% unless current_user.blank? %>
            <h1 class="tittles">
                Bienvenido a tu registro de calorías!
                <div class="buttons">                
                <%= link_to 'Ver mi registro', calories_registers_url, class:"button is-info"  %>   
            </div>
            </h1>
        <% else %>
            <h1 class="tittles">
                Bienvenido a registro de calorías!
            </h1>
            <p>
                Te invitamos a registrarte y lleva un registro completo de tus calorías
            </p>
            <div class="buttons">                
                <%= link_to 'Registrate', new_user_registration_path, class:"button is-info"  %>   
            </div>
        <% end %>
    </div>
</div>